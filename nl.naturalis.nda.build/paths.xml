<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir=".">

    <!-- The absolute path to the parent directory of the directory containing this file -->
    <property name="home" location="${basedir}/../" />
    <property name="nl.naturalis.nda.build.location" location="${home}/nl.naturalis.nda.build" />
    <property name="nl.naturalis.nda.ear.location" location="${home}/nl.naturalis.nda.ear" />
    <property name="nl.naturalis.nda.service.rest.location" location="${home}/nl.naturalis.nda.service.rest" />
    <property name="nl.naturalis.nda.ejb.location" location="${home}/nl.naturalis.nda.ejb" />
    <property name="nl.naturalis.nda.domain.location" location="${home}/nl.naturalis.nda.domain" />
    <property name="nl.naturalis.nda.client.location" location="${home}/nl.naturalis.nda.client" />

    <!-- Libraries in the EAR's lib directory -->
    <path id="earLibs">
        <fileset dir="${nl.naturalis.nda.ear.location}/EarContent/lib">
            <include name="**/*.jar" />
        </fileset>
    </path>

    <!-- Non-packaged libraries (e.g. for unit testing) -->
    <path id="buildOnlyLibs">
        <fileset dir="${nl.naturalis.nda.build.location}/lib">
            <include name="**/*.jar" />
        </fileset>
    </path>

    <!-- Dependencies provided by Wildfly runtime -->
    <path id="wildfly-lib">
        <fileset dir="${wildfly.libdir}">
            <include name="**/*.jar" />
        </fileset>    	
    </path>

    <path id="nl.naturalis.nda.domain.classpath">
        <pathelement location="${nl.naturalis.nda.domain.location}/build/main" />
        <pathelement location="${nl.naturalis.nda.domain.location}/build/test" />
        <path refid="buildOnlyLibs" />
        <path refid="earLibs" />
        <path refid="wildfly-lib" />
    </path>

    <path id="nl.naturalis.nda.ejb.classpath">
        <pathelement location="${nl.naturalis.nda.ejb.location}/build/main" />
        <pathelement location="${nl.naturalis.nda.ejb.location}/build/test" />
        <path refid="nl.naturalis.nda.domain.classpath" />
        <path refid="buildOnlyLibs" />
        <path refid="earLibs" />
        <path refid="wildfly-lib" />
    </path>

    <path id="nl.naturalis.nda.service.rest.classpath">
        <pathelement location="${nl.naturalis.nda.service.rest.location}/build/main" />
        <pathelement location="${nl.naturalis.nda.service.rest.location}/build/test" />
        <fileset dir="${nl.naturalis.nda.service.rest.location}/WebContent/WEB-INF/lib">
            <include name="**/*.jar" />
        </fileset>
        <path refid="nl.naturalis.nda.domain.classpath" />
        <path refid="nl.naturalis.nda.ejb.classpath" />
        <path refid="buildOnlyLibs" />
        <path refid="earLibs" />
        <path refid="wildfly-lib" />
    </path>

    <path id="nl.naturalis.nda.client.classpath">
        <pathelement location="${nl.naturalis.nda.client.location}/build/main" />
        <pathelement location="${nl.naturalis.nda.client.location}/build/test" />
        <fileset dir="${nl.naturalis.nda.client.location}/lib">
            <include name="**/*.jar" />
        </fileset>
        <path refid="buildOnlyLibs" />
    </path>


</project>