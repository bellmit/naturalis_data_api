<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns:ivy="antlib:org.apache.ivy.ant" name="common">

	<property name="javac.source" value="1.7" />
	<property name="javac.target" value="1.7" />
	<property name="javac.debug" value="source,lines,vars" />

	<target name="clean">
		<echo message="*** Performing cleanup for ${ant.project.name}" />
		<delete dir="build/main" />
		<delete dir="build/test" />
		<delete includeemptydirs="true">
			<fileset dir="build">
				<include name="*" />
			</fileset>
		</delete>
	</target>

	<target name="init">
		<echo message="*** Creating build directories for ${ant.project.name}" />
		<mkdir dir="build/main" />
		<mkdir dir="build/test" />
		<echo message="*** Copying resources to build directories" />
		<copy includeemptydirs="false" todir="build/main">
			<fileset dir="src/main/java">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
		<copy includeemptydirs="false" todir="build/main">
			<fileset dir="src/main/resources">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
		<copy includeemptydirs="false" todir="build/test">
			<fileset dir="src/test/java">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
		<copy includeemptydirs="false" todir="build/test">
			<fileset dir="src/test/resources">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>

	<target name="resolve">
		<echo message="*** Resolving dependencies for ${ant.project.name}" />
		<ivy:resolve />
	</target>

	<target name="compile-sources" depends="init">
		<echo message="*** Setting up classpath" />
		<mkdir dir="classpath" />
		<echo message="*** Copying Ivy-managed dependencies to classpath" />
		<ivy:retrieve pattern="classpath/[artifact]-[revision](-[classifier]).[ext]" />
		<echo message="*** Copying non-Ivy-managed libraries to classpath" />
		<copy todir="classpath">
			<path refid="non-ivy-dependencies" />
		</copy>
		<echo message="*** Copying libraries in lib directory to classpath" />
		<copy todir="classpath">
			<fileset dir="lib">
				<include name="**/*.jar" />
			</fileset>
		</copy>
		<echo message="*** Compiling sources" />
		<javac encoding="UTF8" destdir="build/main" debug="true" debuglevel="${javac.debug}" includeantruntime="false" source="${javac.source}" target="${javac.target}">
			<src path="src/main/java" />
			<classpath>
				<fileset dir="classpath">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
		</javac>
		<echo message="*** Removing &quot;classpath&quot; directory" />
		<delete dir="classpath" />
	</target>

	<target name="compile-test-sources" depends="init,resolve,compile-sources">
		<echo message="*** Compiling test classes for ${ant.project.name}" />
		<javac destdir="build/test" debug="true" debuglevel="${javacDebugLevel}" includeantruntime="false" source="${javacSource}" target="${javacTarget}">
			<src path="src/test/java" />
			<classpath refid="${ant.project.name}.classpath" />
		</javac>
	</target>

	<target name="test" depends="compile-test-sources">
		<echo message="*** Testing ${ant.project.name}" />
		<junit printsummary="yes" haltonfailure="yes">
			<classpath refid="${ant.project.name}.classpath" />
			<formatter type="xml" />
			<formatter type="plain" />
			<batchtest todir="${nl.naturalis.nda.build.location}/test-reports">
				<fileset dir="src/test/java">
					<include name="**/*Test.java" />
				</fileset>
			</batchtest>
		</junit>
	</target>

	<target name="package" depends="compile-sources">
		<echo message="*** Packaging ${ant.project.name}" />
		<jar destfile="build/${ant.project.name}.jar" basedir="build/main" />
	</target>


</project>