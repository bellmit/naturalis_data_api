<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." name="modules">

	<!-- Make sure we don't loose ourselves when we are imported -->
	<dirname property="modules.base.dir" file="${ant.file.modules}" />

	<!-- Load build settings -->
	<import file="${modules.base.dir}/properties.xml" />

	<target name="build-api-module">
		<ant antfile="${api.module.location}/build.xml"
		     useNativeBasedir="true"
		     inheritAll="false"
		     inheritRefs="false"
		     target="build" />
	</target>

	<target name="build-dao-module">
		<ant antfile="${dao.module.location}/build.xml"
		     useNativeBasedir="true"
		     inheritAll="false"
		     inheritRefs="false"
		     target="build" />
	</target>

	<target name="build-ejb-module">
		<ant antfile="${ejb.module.location}/build.xml"
		     useNativeBasedir="true"
		     inheritAll="false"
		     inheritRefs="false"
		     target="build" />
	</target>

	<target name="build-rest-module">
		<ant antfile="${rest.module.location}/build.xml"
		     useNativeBasedir="true"
		     inheritAll="false"
		     inheritRefs="false"
		     target="build" />
	</target>

	<target name="build-etl-module">
		<ant antfile="${etl.module.location}/build.xml"
		     useNativeBasedir="true"
		     inheritAll="false"
		     inheritRefs="false"
		     target="build" />
	</target>

</project>