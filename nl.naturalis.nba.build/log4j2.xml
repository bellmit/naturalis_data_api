<?xml version="1.0" encoding="UTF-8"?>
<!-- ++++++++++++++++++++++++++++++++++ -->
<!-- log4j configuration for unit tests -->
<!-- ++++++++++++++++++++++++++++++++++ -->
<Configuration>
	<Appenders>
		<Console name="CONSOLE">
			<PatternLayout pattern="%d{HH:mm:ss.SSS}|%-5level|%c{10}: %msg%n" />
		</Console>
		<File name="FILE" fileName="${sys:nba.v2.log.file}">
			<PatternLayout pattern="%d{HH:mm:ss.SSS}|%-5level|%c{10}: %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<Logger name="nl.naturalis" level="debug" additivity="false">
			<!-- AppenderRef ref="FILE" / -->
			<AppenderRef ref="CONSOLE" />
		</Logger>
		<Root level="ERROR">
			<!-- AppenderRef ref="FILE" / -->
			<AppenderRef ref="CONSOLE" />
		</Root>
	</Loggers>
</Configuration>
