<project>

   <modelVersion>4.0.0</modelVersion>
   <groupId>nl.naturalis.nda</groupId>
   <version>1.0.0</version>
   <artifactId>project</artifactId>
   <packaging>pom</packaging>
   <name>nl.naturalis.nda.project</name>
   
   <modules>
      <module>nl.naturalis.nda.ear</module>
      <module>nl.naturalis.nda.service.rest</module>
      <module>nl.naturalis.nda.ejb</module>
      <module>nl.naturalis.nda.jpa</module>
   </modules>
   
   <dependencyManagement>
      <dependencies>
          <dependency>
            <groupId>nl.naturalis.nda</groupId>
            <artifactId>service.rest</artifactId>
            <version>1.0.0</version>
            <type>war</type>
         </dependency>
         <dependency>
            <groupId>nl.naturalis.nda</groupId>
            <artifactId>ejb</artifactId>
            <version>1.0.0</version>
            <type>ejb</type>
         </dependency>
      <dependency>
         <groupId>nl.naturalis.nda</groupId>
         <artifactId>jpa</artifactId>
		 <version>1.0.0</version>
         <type>jar</type>
      </dependency>
     </dependencies>
   </dependencyManagement>  

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>maven2-repository.dev.java.net</id>
			<name>Java.net Repository for Maven</name>
			<url>http://download.java.net/maven/2/</url>
			<layout>default</layout>
		</repository>
	</repositories>
	
</project>
