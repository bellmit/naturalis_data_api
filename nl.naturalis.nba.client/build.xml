<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." name="nl.naturalis.nba.client">

	<import file="../nl.naturalis.nba.build/common.xml" />
	<import file="../nl.naturalis.nba.build/modules.xml" />

	<!-- Dependencies not managed by Ivy and not in project's lib dir -->
	<path id="non-ivy-dependencies">
		<!-- project dependencies -->
		<filelist dir="${api.module.location}/build" files="${api.module.artifact}" />
		<!-- required libraries not inside the lib directory -->
		<filelist dir="${build.module.location}/lib">
			<file name="org.domainobject.util.jar" />
			<file name="org.domainobject.util.http.jar" />
		</filelist>
	</path>

	<target name="build" depends="build-api-module,clean,package" />


</project>